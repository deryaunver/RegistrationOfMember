    <!-- Custom styles for this template -->
    <link href="form-validation.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container">
        <main>
            <div class="py-5 text-center">
                <img class="d-block mx-auto mb-4" src="/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
                <h2>Kayıt Formu</h2>
                <p class="lead">Lütfen bilginilerinizi giriniz.</p>
            </div>

            <div class="row g-3">

                <div class="col-md-12 order-md-1">
                    <h4 class="mb-3">Kullanıcı Bilgileri</h4>
                 @using (Html.BeginForm())
                 {
                     <div class="row g-3">
                         <div class="col-sm-6">
                             <label for="firstName" class="form-label">Ad</label>
                             @Html.TextBoxFor(m => m.Member.FirstName, new { @class = "form-control" })
                             @Html.ValidationMessageFor(model => model.Member.FirstName, "", new { @class = "text-danger" })
                         </div>

                         <div class="col-sm-6">
                             <label for="lastName" class="form-label">Soyad</label>
                             @Html.TextBoxFor(m => m.Member.LastName, new { @class = "form-control" })
                             @Html.ValidationMessageFor(model => model.Member.LastName, "", new { @class = "text-danger" })

                         </div>

                         <div class="col-12">
                             <label for="tcNo" class="form-label">Tc Kimlik Numarası</label>
                             @Html.TextBoxFor(m => m.Member.TcNo, new { @class = "form-control" })
                             @Html.ValidationMessageFor(model => model.Member.TcNo, "", new { @class = "text-danger" })
                         </div>

                         <div class="col-12">
                             <label for="email" class="form-label">Email </label>
                             @Html.TextBoxFor(m => m.Member.Email, new { @class = "form-control" })
                             @Html.ValidationMessageFor(model => model.Member.Email, "", new { @class = "text-danger" })
                         </div>

                         <div class="col-12">
                             <label for="dateOfBirth" class="form-label">Doğum Tarihiniz</label>
                             @Html.TextBoxFor(m => m.Member.DateOfBirth, new { @class = "form-control" })
                             @Html.ValidationMessageFor(model => model.Member.DateOfBirth, "", new { @class = "text-danger" })

                         </div>

                     </div>

                     <br/>



                     <button class="w-100 btn btn-primary btn-lg" type="submit">Kayıt Ol</button>
                 }
                </div>
            </div>
        </main>

        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 1994–2021 WAMP Company </p>

        </footer>
    </div>

</body>
</html>
